<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ResumeMaker" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <style name="FullScreenDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyCustomTextAppearance">
        <item name="textAllCaps">false</item>
    </style>

    <style name="navigation_main">
        <item name="android:layout_gravity">left|center_horizontal</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_marginRight">-65dp</item>
        <item name="android:layout_marginEnd">-65dp</item>
    </style>
</resources>